<PassUpadateScreen>:

    name: 'updatepass'

    Toolbar:
        id: toolbar
        title: 'Update Password'
        pos_hint: {"top": 1}

    MDIconButton:
        icon: "arrow-left"
        user_font_size: "34sp"
        bold: True
        pos_hint: {'center_x':0.03,'center_y':0.95}
        on_press:
            root.manager.current = 'managesc'
            root.manager.transition.direction = 'right'
            app.mainimage()

    MDTextField:
        id:store_username
        pos_hint: {'center_y':0.6,'center_x':0.5}
        size_hint : (0.7,0.1)
        hint_text: 'Name or UserName'
        helper_text:'Required'
        helper_text_mode:  'on_error'
        icon_right: 'account'
        icon_right_color: app.theme_cls.primary_color
        required: True
        mode: "rectangle"

    MDTextField:
        id:store_password
        pos_hint: {'center_y':0.4,'center_x':0.5}
        size_hint : (0.7,0.1)
        hint_text: 'New Password'
        helper_text:'Required'
        helper_text_mode:  'on_error'
        icon_right_color: app.theme_cls.primary_color
        required: True
        password: True
        mode: "rectangle"

    MDRaisedButton:
        text:'Update'
        size_hint: (0.13,0.07)
        pos_hint: {'center_x':0.5,'center_y':0.2}
        on_press: app.update_pass()

