<LoginScreen>:

    name:'loginsc'


    Image:
        source: f'assets\\login.png'
        pos_hint: {'center_y':0.83}

    MDTextField:
        
        id:login_username

        pos_hint: {'center_y':0.7,'center_x':0.5}
        size_hint : (0.7,0.1)
        hint_text: 'UserName'
        helper_text:'Required'
        helper_text_mode:  'on_error'
        icon_right: 'account'
        icon_right_color: app.theme_cls.primary_color
        required: True
        mode: "rectangle"

    MDTextField:

        id:login_password

        pos_hint: {'center_y':0.5,'center_x':0.5}
        size_hint : (0.7,0.1)
        hint_text: 'Password'
        helper_text:'Required'
        helper_text_mode:  'on_error'
        icon_right_color: app.theme_cls.primary_color
        required: True
        password: True
        mode: "rectangle"

    MDIconButton:
        icon: "eye"
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        pos_hint: {'center_x':0.825,'center_y':0.495}
        on_press:
            app.showloginpass()
        

    MDRaisedButton:
        text:'Login'
        size_hint: (0.13,0.07)
        pos_hint: {'center_x':0.5,'center_y':0.3}
        on_press:
            app.login()
            
        
    MDTextButton:
        text: 'Create an account'
        pos_hint: {'center_x':0.5,'center_y':0.18}
        on_press:
            root.manager.current = 'signupsc'
            root.manager.transition.direction = 'up'

    MDTextButton:
        text: 'Forgot Password'
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press:
            root.manager.current = 'forgetsc'
            root.manager.transition.direction = 'up'

    MDIconButton:
        icon: "arrow-left"
        user_font_size: "34sp"
        pos_hint: {'center_x':0.1,'center_y':0.95}
        on_press:
            root.manager.current = 'welcomesc'
            root.manager.transition.direction = 'right'

    MDIconButton:
        icon:'close-box-outline'
        font_size: 25
        user_font_size: "48sp"
        pos_hint: {'center_x':0.95,'center_y':0.95}
        on_press:
            app.closeapp()
