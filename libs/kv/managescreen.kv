<ManageScreen>:

    name: 'managesc'

    Toolbar:
        id: toolbar
        title: 'Password Manager'
        pos_hint: {"top": 1}

    MDIconButton:
        icon: "arrow-left"
        user_font_size: "34sp"
        bold: True
        pos_hint: {'center_x':0.03,'center_y':0.95}
        on_press:
            root.manager.current = 'menusc'
            root.manager.transition.direction = 'right'
            app.mainimage()

#    RecycleView:
#        id: rv

    MDRectangleFlatButton:
        id: psmanager

        text: ""
        bold: True
        pos_hint: {'center_x':0.29, 'center_y': 0.65}
        size_hint: (.35, .3)
        on_release:
            app.display_pass()

        Image:
            size_hint_x: 1
            allow_stretch: True
            source: f'assets\\generate.png'
            pos_hint: {'center_y':0.5}

    MDRectangleFlatButton:
        id: psmanager

        text: ""
        bold: True
        pos_hint: {'center_x':0.71, 'center_y': 0.65}
        size_hint: (.35, .3)
        on_release:
            root.manager.current = 'passstore'
            root.manager.transition.direction = 'left'

        Image:
            size_hint_x: 1
            allow_stretch: True
            source: f'assets\\store.png'
            pos_hint: {'center_y':0.5}

    MDRectangleFlatButton:
        id: psmanager

        text: ""
        bold: True
        pos_hint: {'center_x':0.29, 'center_y': 0.25}
        size_hint: (.35, .3)
        on_release:
            root.manager.current = 'updatepass'
            root.manager.transition.direction = 'left'

        Image:
            size_hint_x: 1
            allow_stretch: True
            source: f'assets\\update.png'
            pos_hint: {'center_y':0.5}

    MDRectangleFlatButton:
        id: psmanager

        text: ""
        bold: True
        pos_hint: {'center_x':0.71, 'center_y': 0.25}
        size_hint: (.35, .3)
        on_release:
            root.manager.current = 'showpass'
            root.manager.transition.direction = 'left'

        Image:
            size_hint_x: 1
            allow_stretch: True
            source: f'assets\\show.png'
            pos_hint: {'center_y':0.5}

