<BackdropBackLayer@FloatLayout>
    scale_x: 0
    scale_y: 0

    Image:
        opacity: .2
        #source: f"assets\\bc.jpeg"
        source: f"assets\\TvuM20.png"
        pos_hint: {"center_y": .55}
        canvas.before:
            PushMatrix
            Scale:
                origin: self.center
                x: root.scale_x
                y: root.scale_y
        canvas.after:
            PopMatrix


    ScrollView:

        MDGridLayout:
            adaptive_height: True
            cols: 1
            padding: "10dp"
            spacing: "10dp"

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                padding: "10dp"
                spacing: "10dp"

                MDLabel:
                    text: "Change Style"
                    bold: True
                    theme_text_color: "Primary"

                MDBoxLayout:
                    size_hint: None, None
                    adaptive_size: True
                    spacing: "30dp"

                    ThemeStyleCheckbox:

                    Label:
                        text: "Dark"
                        color: app.theme_cls.text_color

                    ThemeStyleCheckbox:

                    Label:
                        text: "Light"
                        color: app.theme_cls.text_color

            MDSeparator:
            MDSeparator:

            MDLabel:
                id: label_theme
                text: "Current theme: {}".format(app.theme_cls.primary_palette)
                bold: True
                theme_text_color: "Primary"
                adaptive_height: True

            IconListItem:
                text: "Change Theme"
                icon: "palette-outline"
                divider: None
                on_release: app.show_dialog_change_theme()

            MDSeparator:
            MDSeparator:

            IconListItem:
                icon:'logout-variant'
                text: "Logout"
                font_size: 20
                #pos_hint: {'center_x':0.05,'center_y':0.97}
                on_release:
                    #root.manager.current = 'loginsc'
                    #root.manager.transition.direction = 'right'
                    app.logout()

            MDSeparator:

            IconListItem:
                icon: 'power-settings'
                text: 'Exit'
                font_size: 20
                #pos_hint: {'center_x':0.97,'center_y':0.97}
                on_release:
                    app.closeapp()

            MDSeparator:

            IconListItem:
                icon: 'delete'
                text: 'Delete Account'
                font_size: 20
                #pos_hint: {'center_x':0.97,'center_y':0.97}
                on_release:
                    app.delete_user()

            MDSeparator:

            Widget:
                size_hint_y: None
                height: app.theme_cls.standard_increment

  